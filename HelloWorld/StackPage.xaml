<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Padding="0,20,0,0" BackgroundColor="#127ac7"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld.StackPage">

   <StackLayout VerticalOptions="Center" Spacing="20">
       <Label Text="Welcome To Xamarin"
              FontSize="30"
              FontAttributes="Bold"
              TextColor="White"
              HorizontalOptions="Center"/>
        <Label Text="Cross Platform Apps Made Easy"
              FontSize="16"
              FontAttributes="Bold"
               TextColor="White"
              HorizontalOptions="Center"/>
       <Button Text="Login"
               BackgroundColor="#1dabf0"
               TextColor="White"
               HorizontalOptions="FillAndExpand"/>
          <Button Text="Register"
               BackgroundColor="#1dabf0"
               TextColor="White"
               HorizontalOptions="FillAndExpand"/>
       </StackLayout>

</ContentPage>
