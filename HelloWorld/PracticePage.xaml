<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld.PracticePage">
    
    <AbsoluteLayout>
        <Image Source="http://lorempixel.com/1920/1080/nature/7" Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"/>
        <Label Text="Relax" HorizontalOptions="Center" FontSize="30" AbsoluteLayout.LayoutBounds="0,20,1,50" AbsoluteLayout.LayoutFlags="WidthProportional"
               TextColor="White"/>
        <BoxView BackgroundColor="Black" Opacity=".5" AbsoluteLayout.LayoutBounds="0,1, 1, 100" AbsoluteLayout.LayoutFlags="WidthProportional,YProportional " />
        <StackLayout Orientation="Horizontal" Padding="30" AbsoluteLayout.LayoutBounds="0,1, 1, 100" AbsoluteLayout.LayoutFlags="WidthProportional,YProportional ">
            <Label Text="Profile" HorizontalOptions="StartAndExpand" TextColor="White" FontSize="15"/>
               <Label Text="Meditate" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="15" />
   <Label Text="Themes" HorizontalOptions="EndAndExpand" TextColor="White" FontSize="15"/>

        </StackLayout>
    </AbsoluteLayout>


</ContentPage>
